	<select id="getCntBoard" resultType="int">
			SELECT
				COUNT(*)
			FROM
				 boards b
			WHERE 
					b.is_delete = 'active'
					AND 
					b.bbs_cate_cd = 'bbs_cate_01'
	
	</select>





<select id="getFreeBoardsList" parameterType="gamepiece.util.Pageable" resultMap="BoardResultMap">
    SELECT
	 	b.bbs_no,
		b.bbs_title,
		b.bbs_view,
		b.bbs_like,
		b.bbs_dislike,
		u.user_nn,
		b.bbs_ymd
FROM
	boards b INNER JOIN user u
	ON b.id = u.id
WHERE 
		b.is_delete = 'active'
		AND 
		b.bbs_cate_cd = 'bbs_cate_01'
 LIMIT #{rowPerPage} OFFSET #{offset};
</select>





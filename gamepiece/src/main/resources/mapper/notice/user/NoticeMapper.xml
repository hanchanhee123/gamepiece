<select id="getCntNotice" resultType="int">
		SELECT
			COUNT(*)
		FROM
			 ntc_mttr
		WHERE
			is_delete = 'active'
	
</select>



<select id="getNoticeList" parameterType="gamepiece.util.Pageable" resultMap="NoticeResultMap">

SELECT 
	ntc_no, 
	ntc_title, 
	ntc_cn, 
	ntc_img, 
	ntc_view, 
	admin_id, 
	reg_ymd
FROM
	 ntc_mttr
WHERE
	is_delete = 'active'
 LIMIT #{rowPerPage} OFFSET #{offset};
</select>


	<select id="getNoticeInfo" parameterType="Notice" resultMap="NoticeResultMap">
	
	SELECT 
		nm.ntc_no, 
		nm.ntc_title, 
		nm.ntc_cn, 
		nm.ntc_img, 
		nm.ntc_view, 
		u.user_nn, 
		nm.reg_ymd
	FROM 
		ntc_mttr nm INNER JOIN user u 
		ON nm.admin_id = u.id
	WHERE
		nm.ntc_no=#{noticeNum};
		
	
	</select>
	
